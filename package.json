{
    "name": "swc-plugin-barrel-files",
    "version": "1.0.0",
    "description": "SWC plugin that transforms imports from barrel files into direct imports from source files, improving tree-shaking and speeding up build times",
    "main": "swc_plugin_barrel_files.wasm",
    "files": [
        "swc_plugin_barrel_files.wasm",
        "types.d.ts"
    ],
    "scripts": {
        "build": "cargo build-wasip1 --release",
        "postbuild": "cp target/wasm32-wasip1/release/swc_plugin_barrel_files.wasm .",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [
        "swc",
        "swc-plugin",
        "barrel-files"
    ],
    "author": "Maksim Zemskov <nodge@yandex.ru>",
    "license": "MIT",
    "homepage": "https://github.com/nodge/swc-plugin-barrel-files",
    "repository": {
        "type": "git",
        "url": "https://github.com/nodge/swc-plugin-barrel-files.git"
    },
    "devDependencies": {
        "@swc/core": "1.3.95",
        "@types/node": "22.13.11",
        "prettier": "3.5.3",
        "typescript": "5.8.2",
        "vitest": "3.0.9"
    }
}
